<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:id="@+id/swipeBack"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:tag="swipeBack">

        <Button
            android:id="@+id/friend_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_delete_btn"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/swipeFront"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:tag="swipeFront">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/friend_selected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/friend_mail"
            android:textSize="20dp"/>
    </LinearLayout>

</FrameLayout>
